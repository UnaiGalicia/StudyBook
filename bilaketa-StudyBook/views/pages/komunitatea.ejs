<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head'); %>
</head>
<body class="container">

<header>
    <%- include('../partials/header-user'); %>
</header>

<main>
        <section class="section is-small">
            <h1 class="title marroia"><i class="fas  fa-users mr-3"></i>Komunitateak</h1>
            <h2 class="subtitle">
                  @<%=erabiltzailea%>
            </h2>
        </section>
        <div class="columns">
            <div class="column is-one-quarter mx-3">
                <form action="/komunitatea/upload" method="POST">
                    <input class="input" type="text" placeholder="Komunitatearen izena sartu" name="izena" id="izena">
                    <input type="submit" value="Komunitatea sortu!" class="button is-warning mt-2">
                </form>
            </div>
            <div class="column is-three-quarters mx-3">
                <% if(komunitateak){ %>                                                                    <!-- IF komunitateak FROM -->
                <% komunitateak.forEach(function(komunitatea) { %>
                    <div class="box mb-3 mx-3">
                            <a href="/komunitatea/<%=komunitatea.izena %>"><p class="title is-4"><%=komunitatea.izena %></p></a>
                        <a href="/bilatu/<%=komunitatea.sortzailea %>"><p class="subtitle is-6 mt-3"> <i class="fas fa-user mr-2"></i>Sortzailea: <%=komunitatea.sortzailea %></p></a> <!--Show the filename-->        <!-- nik egindakoa -->
                        <%if(erabiltzailea==komunitatea.sortzailea){%>
                            <form method="POST" action="/komunitatea/<%=komunitatea.izena%>?_method=DELETE">      <!-- take the file id and send it as DELETE -->
                                <button class="button is-danger mt-1">
                                    <span>
                                        <i class="fas fa-trash-alt mr-2"></i>
                                    </span>
                                    <span>EZABATU</span>
                                </button>
                            </form>
                        <%} %>
                    </div>
                <% }) %>
                <% } else { %>
                    <p>Ez dago komunitaterik</p>
                <% } %>
            </div>
        </div>
</main>

<footer>
    <%- include('../partials/footer-user'); %>
</footer>

</body>
</html>