<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head'); %>
    <script src="https://smtpjs.com/v3/smtp.js"></script>
</head>
<body class="container">

<header>
    <%- include('../partials/header'); %>
</header>

<main>

<section >
      <div >
                          <div class="box">
                          <font size="+2" class="fk">ARAZO BAT IZAN DUZU?</font>
                              <form action="#" method="post" id="aintzel" onsubmit="return check();" role="form" >
                                            <div >
                                              <div >
                                              <label class="label">Idatzi izena:</label>
                                                <input type="text" name="name" class="input is-normal" id="name" placeholder="Izena" data-rule="minlen:4" data-msg="Please enter at least 4 chars" />
                                                <div class="validate"></div>
                                              </div></br>
                                              <div >
                                              <label class="label">Idatzi zure emaila:</label>
                                                <input type="email" class="input is-normal" name="email" id="email" placeholder="Emaila" data-rule="email" data-msg="Please enter a valid email" />
                                                <div ></div>
                                              </div></br>
                                            </div>
                                            <div >
                                            <label class="label">Idatzi zure mezuaren gaia:</label>
                                              <input type="text" class="input is-normal" name="subject" id="subject" placeholder="Emailaren gaia" data-rule="minlen:4" data-msg="Please enter at least 8 chars of subject" />
                                              <div ></div></br>
                                            </div>
                                            <div >
                                            <label class="label">Idatzi mezua:</label>
                                              <textarea class="textarea" name="message" id="message" rows="10" data-rule="required" data-msg="Please write something for us" placeholder="Idatzi mezua..."></textarea>
                                              <div class="validate"></div></br>
                                            </div>
                                            <div >
                                              <div class="error-message"></div>
                                            </div>
                                            <div class="text-center"><button type="submit" class="button is-danger" onclick="send(event)">Mezua bidali</button></div>
                                          </form>
                          </div>
                      </div>

</section>

</main>

<footer>
<%- include('../partials/footer'); %>
</footer>

<script>
    function send(event) {
        event.preventDefault();
        Email.send({
          name:document.getElementById('name').value,
          Host : "smtp.gmail.com",
          Username : "studybookapplication@gmail.com",
          Password : "gdr1999ehu",
          To : "studybookapplication@gmail.com",
          From : document.getElementById('email').value,
          Subject : document.getElementById('subject').value,
          Body : document.getElementById('message').value
          }).then(function(response){
           if (response == 'OK') {
               alert("Mail sent succeessfully");
            } else {
                throw new Error("Error: " + response.statusText);
            }
         });
         document.getElementById("aintzel").reset();

    }
  </script>
  <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
      <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
      <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

</body>
</html>